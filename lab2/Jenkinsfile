pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Jenkins подтягивает ветку, указанную в настройках Job
                checkout scm
            }
        }

        stage('Build Service A') {
            steps {
                script {
                    dir('lab2/service-a') {
                        // Собираем Docker-образ для сервиса А
                        bat "docker build -t service-a-image:latest ."
                    }
                }
            }
        }

        stage('Build Service B') {
            steps {
                script {
                    dir('lab2/service-b') {
                        // Собираем Docker-образ для сервиса Б
                        bat "docker build -t service-b-image:latest ."
                    }
                }
            }
        }

        stage('Test Deployment') {
            steps {
                script {
                    dir('lab2') {
                        // Проверяем, что всё собирается через docker-compose
                        bat "docker-compose build"
                        echo "Сборка всех сервисов через Compose прошла успешно!"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Пайплайн завершен успешно! Образы готовы к работе.'
        }
        failure {
            echo 'Ошибка при сборке. Проверьте логи этапов выше.'
        }
    }
}
